import os, sys
import stat
if sys.version_info < (3, 0):
	import urllib2
	globals()['urlopen'] = urllib2.urlopen
else:
	import urllib.request
	globals()['urlopen'] = urllib.request.urlopen

RAISE_ACTUAL_URL = 'http://bazaar.launchpad.net/~workhorsy/raise/0.1.0/download/head:/raise-20120417054845-dmqxla979coc2eqq-1/raise_actual'

def friendly_size(data_length):
	retval = ''
	size_map = [
		{'B'  : 1},
		{'KB' : 1024.0},
		{'MB' : 1024000.0},
		{'GB' : 1024000000.0}
	]
	for i in size_map:
		for name, size in i.items():
			if data_length >= size:
				retval = '{0} {1}'.format(round(data_length / size, 2), name)
				break

	return retval

def download_file(url, cb_progress, cb_done):
	chunk_size = 1024
	response = ''
	try:
		response = urlopen(url)
		if response.code != 200:
			print('Download failed. Exiting ...')
			exit()
	except Exception as e:
		print('Download failed. Exiting ...')
		exit()
	content_length = int(response.headers['Content-Length'])
	data = b''
	data_length = 0

	while True:
		chunk = response.read(chunk_size)
		if not chunk:
			break

		data += chunk
		data_length += len(chunk)
		percent = round((float(data_length) / content_length)*100, 2)

		cb_progress(chunk, data_length, chunk_size, content_length, percent)

	cb_done(data)

def update():
	print("Downloading newest Raise version ...")

	# Get the file name for actual
	file_name = '.raise_actual'
	if os.path.isfile('raise_actual'):
		file_name = 'raise_actual'

	try:
		def cb_progress(chunk, data_length, chunk_size, content_length, percent):
			# Write the download progress
			sys.stdout.write("Downloaded {0} of {1} ({2}%)\r".format(friendly_size(data_length), friendly_size(content_length), percent))

			# Write a newline if the download is complete
			if data_length >= content_length:
				sys.stdout.write('\n')

			sys.stdout.flush()

		def cb_done(data):
			# Make sure the downloaded file is python
			if not data.startswith("#!/usr/bin/env python"):
				print('The downloaded update was invalid. Make sure http://launchpad.net can be accessed. Exiting ...')
				exit()

			# Save the file
			f = open(file_name, 'wb')
			f.write(data)

		# Download the file and call the cb after each chunk
		download_file(RAISE_ACTUAL_URL, cb_progress, cb_done)

		# Make the file executable
		os.chmod(file_name, 0o775 | stat.S_IXOTH)
	except Exception as e:
		print(str(e))

if __name__ == '__main__':
	# Clear the terminal
	os.system('clear')

	# Get the arguments
	args = str(str.join(' ', sys.argv[1:]))

	# Run update if that is the target
	if args == 'update':
		update()
		exit()

	# Run update if there is no raise_actual file
	actual = '.raise_actual'
	if os.path.isfile('raise_actual'):
		actual = 'raise_actual'
	elif not os.path.isfile('.raise_actual'):
		update()

	# Have the raise_actual file handle everything else
	os.system('./{0} {1}'.format(actual, args))


