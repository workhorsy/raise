#!/usr/bin/env python
# -*- coding: UTF-8 -*-


def clean():
	rmfile_f('raise_example')

def configure():
	os.environ['CC'] = 'gcc'
	os.environ['CFLAGS'] = '-g -Wall -Werror'

def test():
	clean()
	configure()

	c_build_program('raise_example', ['main.c'])
	run_say('./raise_example')

def remove():
	require_root()
	clean()

	rmfile_f('/usr/bin/raise_example')

def install():
	require_root()
	clean()
	remove()

	configure()
	c_build_program('raise_example', ['main.c'])

	cpfile('raise_example', '/usr/bin/raise_example')



