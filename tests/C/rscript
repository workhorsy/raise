#!/usr/bin/env python
# -*- coding: UTF-8 -*-

import os
import_module('C')
import_module('Linker')

def clean():
	"""Removes any files and directories generated when building."""
	pass

def _configure():
	cc = c_get_default_compiler()
	cc.debug = True
	cc.optimize = True
	cc.warnings_all = True
	cc.warnings_as_errors = True
	c_save_compiler(cc)

	linker = linker_get_default_linker()
	linker_save_linker(linker)

	os.environ['LD_LIBRARY_PATH'] = os.getcwd()

def build_object():
	clean()
	_configure()

	c_build_object('lib_math.o', ['lib_math.c'])
	c_build_object('main.o', ['main.c'])

	c_build_program('main', ['lib_math.o', 'main.o'])

	run_say('./main')

def build_program():
	clean()
	_configure()

	c_build_program('main', ['lib_math.c', 'main.c'])

	run_say('./main')

def build_shared_library():
	clean()
	_configure()

	# Build the library
	c_build_object('lib_math.o', ['lib_math.c'])
	c_build_shared_library('lib_math.so', ['lib_math.o'])

	c_build_program('main', ['main.c', 'lib_math.so'])

	run_say('./main')


